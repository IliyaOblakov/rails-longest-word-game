 <div class="container">
    <h1>New Game</h1>
    <div class="row">
      <ul class="list-inline" >
          <% @letters.each do |letter| %>
          <li class="list-inline-item justify-content: space-between line-hight: 20px" id="letters"><%= letter %></li>
          <% end %>
      </ul>
    </div>
    <form action="/score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
      <div class="form-group">
        <input type="text" name="answer" class="form-inline">
        <button type="submit" class="btn btn-primary">Submit Your Word!</button>
      </div>
    </form>
 </div>
